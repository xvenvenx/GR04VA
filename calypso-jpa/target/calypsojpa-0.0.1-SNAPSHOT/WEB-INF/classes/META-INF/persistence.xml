<persistence 
    xmlns=
        "http://java.sun.com/xml/ns/persistence"
    xmlns:xsi=
        "http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation=
        "http://java.sun.com/xml/ns/persistence 
         persistence_1_0.xsd"
    version="1.0">	
<persistence-unit name="default" 
      transaction-type="JTA">
      <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/Calypso</jta-data-source>
    <exclude-unlisted-classes>
      false
    </exclude-unlisted-classes>
    <properties >         
        <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/calypso;create=true"/>
        <property name="javax.persistence.jdbc.user" value="user0"/>
        <property name="javax.persistence.jdbc.password" value="pw715"/>
    	<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"></property>
    	<property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.ClientDriver"></property>
    	<property name="hibernate.connection.url" value="jdbc:derby://localhost:1527/calypso;create=true"></property>
    	<property name="hibernate.default_schema" value="USER0"></property>
    	<property name="hibernate.connection.username" value="user0"></property>
    	<property name="hibernate.connection.password" value="pw715"></property></properties>
</persistence-unit>
</persistence>